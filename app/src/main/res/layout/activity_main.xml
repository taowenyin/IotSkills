<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="cn.edu.siso.iotskills.MainActivity">

    <TextView
        android:id="@+id/socket_result_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/socket_receive_text_height"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@android:color/darker_gray"/>

    <EditText
        android:id="@+id/socket_send_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/socket_send_text_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/socket_send_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/socket_send_btn_txt"/>

        <Button
            android:id="@+id/socket_connect_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/socket_connect_btn_txt"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/server_ip_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/server_ip_text_hint"/>

        <EditText
            android:id="@+id/server_port_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/server_port_text_hint"/>

    </LinearLayout>

</LinearLayout>
